<!DOCTYPE html>
<html lang="es">

<head>
    <%- include partials/head %>
</head>

<body>
    <div class="top-container font-style">
        <%- include partials/nav_partida %>
    </div>
    <div class="mid-container">
           <p class="notificacion capsuula">&nbsp;<%- include partials/notificacion %>&nbsp;</p>
            <!-- Begin Partidas que admiten jugadores-->
            <div class="caja">
                <h2 class="pacifico">&nbsp;Unirse a partida</h2>
                <p class="notasInformativas">A continuación se muestra una lista con las partidas abiertas que admiten jugadores.</p>
                <br>
                <table>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Nº max jugadores</th>
                    <th>Participantes</th>
                    <% datosPerfil.forEach(function(partida) {%>
                        <% if(partida.estado === 'abierta' && partida.creador !== usuario){ %>
                            <tr>
                                <td><%=partida.nombre%></td>
                                <td><%=partida.fecha.getDate() +"/"+ partida.fecha.getMonth() +"/"+ partida.fecha.getFullYear() %></td>
                                <td><%=partida.numMax_jugadores%></td>
                                <td><%=partida.nombre_jugadores%></td>
                                <% if(partida.num_jugadores + 1 === partida.numMax_jugadores){ %>
                                	<td><a href="/juegan/daoInsertar_y_Cerrar/<%=partida.id_partida%>"><button class="botonUnirse capsuula">Unirse</button></a></td>
                                <% }else{ %>
                                 	<td><a href="/juegan/daoInsertarJuegan/<%=partida.id_partida%>"><button class="botonUnirse capsuula">Unirse</button></a></td>
                                <% } %>
                            </tr>
                    <%}}); %>
               </table>
               <br>
                <a href="/usuario/profile">
                    <p class="back pacifico">Volver a tu perfil</p>
                </a>
                <br>
                <br>
            </div>
            <!-- End Partidas que admiten jugadores-->
    </div>
</body>

</html>
